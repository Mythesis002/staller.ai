# ============================================================================
# API CREDENTIALS (Required)
# ============================================================================

# RapidAPI - For ChatGPT API access
RAPIDAPI_KEY=your_rapidapi_key_here

# Shotstack - For video rendering
SHOTSTACK_API_KEY=your_shotstack_api_key_here

# Google Gemini - For prompt enhancement
GOOGLE_API_KEY=your_google_api_key_here

# Cloudinary - For media storage
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
CLOUDINARY_FOLDER=videoagent/uploads
CLOUDINARY_UPLOAD_PRESET=your_upload_preset

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=0

# ============================================================================
# LOGGING
# ============================================================================

LOG_LEVEL=INFO
LOG_FILE=logs/api.log
LOG_FORMAT=json

# ============================================================================
# SECURITY
# ============================================================================

# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,yourdomain.com

# Secret key for JWT (generate with: openssl rand -hex 32)
SECRET_KEY=change-this-to-a-random-secret-key

# ============================================================================
# RATE LIMITING
# ============================================================================

# Redis URL for distributed rate limiting (optional, defaults to in-memory)
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# FILE UPLOAD LIMITS
# ============================================================================

# Maximum file size in bytes (default: 500MB)
MAX_FILE_SIZE=524288000

# Maximum number of files per request
MAX_FILES_PER_REQUEST=10

# ============================================================================
# TIMEOUTS
# ============================================================================

# Request timeout in seconds
REQUEST_TIMEOUT=300

# Media analysis timeout in seconds
ANALYSIS_TIMEOUT=120

# Video rendering timeout in seconds
RENDER_TIMEOUT=600

# ============================================================================
# FEATURES
# ============================================================================

# Enable prompt enhancer (Gemini-based)
ENABLE_PROMPT_ENHANCER=1

# Enable API documentation
ENABLE_DOCS=1

# Enable metrics
ENABLE_METRICS=1

# ============================================================================
# MONITORING (Optional)
# ============================================================================

# Sentry DSN for error tracking
SENTRY_DSN=

# Environment name
ENVIRONMENT=production

# ============================================================================
# EXTERNAL APIS
# ============================================================================

# Gradio APIs for media analysis
GRADIO_VIDEO_API=akhaliq/MiniCPM-V-4_5-video-chat
GRADIO_AUDIO_API=MidasHeng/LM-7B

# Allowed media hosts (comma-separated)
ALLOWED_MEDIA_HOSTS=res.cloudinary.com

# ============================================================================
# ASSET ENFORCEMENT
# ============================================================================

# Asset enforcement mode: strict, warn, or off
ASSET_ENFORCEMENT_MODE=warn
